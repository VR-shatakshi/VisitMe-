<%- layout("/layout/boilerplate") %>
    <div class="row col-6 offset-2 order-3">
      <br>
      <br>
     <h1>Create New Listings </h1>
    <div class="col">
    <form method ="POST" action="/listings" novalidate class="needs-validation ">
    <div class="mb-3">
    <label for="title" class="form-label">Title:</label>
    <input name="listing[title]"  placeholder="Enter title"  type ="text" class ="form-control" required>
     <div class="valid-feedback">Greate Title !</div>
    <div class="invalid-feedback">Please write title</div>
    </div>
    
    <div class="mb-3">
    <label for="description" class="form-label">Description:</label>   
    <textarea name ="listing[description]" placeholder="Enter description"class="form-control" required ></textarea> 
     <div class="valid-feedback">Greate Description !</div>
    <div class="invalid-feedback">Please write Description</div>
    </div>

    <div class="mb-3">
    <label for="image" class="form-label">Image:</label>  
     <input name="listing[image]" type="text" placeholder="Enter image's url" class ="form-control" required>
    <div class="valid-feedback">Greate Image selected!</div>
    <div class="invalid-feedback">Please write image's url</div>
     </div>

     <div class ="mb-3">
    <label for="price" class="form-label">Price:</label> 
    <input name="listing[price]" type="text" placeholder="Enter price" class="form-control" required >
    <div class="valid-feedback">Greate Price !</div>
    <div class="invalid-feedback">Please write Price</div>
    </div>

    
    <div class="mb-3">
     <label for="location" class="form-label">Location:</label>     
     <input name="listing[location]" type="text" placeholder="Enter location" class="form-control" required>
    <div class="valid-feedback">Greate Location !</div>
    <div class="invalid-feedback">Please write location</div>
    </div>
    
    <div class="mb-3">
    <label for="country" class="form-label">Country:</label>        
    <input name ="listing[country]" type="text" placeholder="Enter country" class="form-control"  required >
    <div class="valid-feedback">Greate Country !</div>
    <div class="invalid-feedback">Please write Country</div>
    </div>
   
    <button class ="btn btn-dark add-btn">Add</button>
    </form>
    <br>
    </div>
  </div>  

